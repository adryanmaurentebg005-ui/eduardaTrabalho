<html lang="pt-BR">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Gerenciamento de Academia -  Eduarda Fernandes - 5º Info</title>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
 <style>
    :root {
      --bg: #1c1c1e; /* fundo escuro */
      --panel: #2c2c34; /* painel escuro */
      --text: #f5f5f5; /* texto claro */
      --muted: #aaaaaa; /* texto secundário */
      --primary: #ff4d4d; /* vermelho gym */
      --primary-contrast: #fff;
      --secondary: #ff8c42; /* laranja */
      --border: #444;
      --accent: #22c55e; /* verde para status positivo */
      --shadow: rgba(0, 0, 0, 0.4);
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: var(--bg);
      color: var(--text);
      line-height: 1.5;
    }

    .container {
      max-width: 1100px;
      margin: 40px auto 80px;
      padding: 0 20px;
      box-sizing: border-box;
    }

    /* Header */
    .header {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 12px;
    }

    .title {
      font-size: 32px;
      font-weight: 700;
      color: var(--primary);
      letter-spacing: -0.5px;
    }

    .subtitle {
      color: var(--muted);
      margin-bottom: 20px;
    }

    /* Tabs */
    .tabs {
      display: flex;
      gap: 6px;
      margin-bottom: 20px;
    }

    .tab {
      padding: 10px 20px;
      border-radius: 12px;
      background: var(--panel);
      color: var(--text);
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .tab:hover,
    .tab.active {
      background: linear-gradient(90deg, var(--primary), var(--secondary));
      color: var(--primary-contrast);
      box-shadow: 0 4px 12px var(--shadow);
    }

    /* Section Panels */
    .section {
      background: var(--panel);
      padding: 20px;
      border-radius: 16px;
      margin-top: 20px;
      box-shadow: 0 4px 12px var(--shadow);
      border: 1px solid var(--border);
    }

    .section h2 {
      margin-bottom: 10px;
      font-size: 24px;
      color: var(--primary);
    }

    .section p {
      color: var(--muted);
      margin-bottom: 16px;
    }

    /* Tabela */
    .table-wrap {
      overflow-x: auto;
      border-radius: 12px;
      border: 1px solid var(--primary);
      background: var(--bg);
      width: 100%;
      box-sizing: border-box;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: var(--panel);
    }

    thead th {
      background: var(--primary);
      color: var(--primary-contrast);
      padding: 12px 14px;
      font-weight: 600;
      border: 1px solid var(--border);
      text-align: left;
    }

    tbody tr {
      background: #3a3a44; /* tom cinza para linhas */
      transition: background 0.2s ease;
    }

    tbody tr:nth-child(even) {
      background: #2c2c34; /* efeito zebra */
    }

    tbody tr:hover {
      background: #48484f; /* destaque no hover */
    }

    tbody td {
      padding: 12px 14px;
      color: var(--text);
      border: 1px solid var(--border);
    }

    /* Badges e status */
    .badge-status {
      padding: 4px 10px;
      border-radius: 8px;
      font-size: 0.85rem;
      font-weight: 600;
      color: #fff;
      display: inline-block;
    }

    .badge-status.disponivel {
      background: var(--accent);
    }

    .badge-status.emprestado {
      background: #ef4444;
    }

    .badge-status.ativo {
      background: var(--primary);
    }

    /* Icon Buttons */
    .icon-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: transparent;
      border: none;
      cursor: pointer;
      padding: 6px;
      border-radius: 8px;
      transition: all 0.2s ease;
    }

    .icon-btn:hover {
      background: #3a3a44;
      transform: scale(1.1);
    }

    .icon-btn svg {
      width: 20px;
      height: 20px;
      color: var(--primary-contrast);
      transition: color 0.2s ease, transform 0.2s ease;
    }

    .icon-btn.edit svg {
      color: var(--accent);
    }

    .icon-btn.delete svg {
      color: #ef4444;
    }

    .icon-btn.view svg {
      color: #3b82f6;
    }

    /* Botões */
    .btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 10px 16px;
      font-weight: 600;
      border-radius: 10px;
      cursor: pointer;
      border: none;
      transition: all 0.3s ease;
    }

    .btn.primary {
      background: linear-gradient(90deg, var(--primary), var(--secondary));
      color: var(--primary-contrast);
    }

    .btn.primary:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 16px var(--shadow);
    }

    /* Form Inputs */
    input[type="text"],
    input[type="number"],
    input[type="email"],
    input[type="date"],
    select,
    textarea {
      width: 100%;
      padding: 12px 14px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: #2c2c34;
      color: var(--text);
      font-size: 14px;
      transition: all 0.2s ease;
      box-sizing: border-box;
    }

    input:focus,
    select:focus,
    textarea:focus {
      border-color: var(--primary);
      box-shadow: 0 0 8px var(--primary);
      outline: none;
      background: #3a3a44;
    }

    label {
      font-size: 14px;
      font-weight: 600;
      color: var(--primary);
      margin-bottom: 6px;
      display: block;
    }

    /* Footer */
    footer {
      text-align: center;
      padding: 20px;
      margin-top: 40px;
      color: var(--muted);
      font-size: 14px;
    }

    /* Responsivo */
    @media (max-width: 768px) {
      .tabs {
        flex-wrap: wrap;
      }

      .card {
        margin-bottom: 12px;
      }
    }
  </style>
</head>

