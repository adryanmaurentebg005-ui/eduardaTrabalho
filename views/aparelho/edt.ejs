<%- include('../cabecalho.ejs') %>

<header>
  <h3>Editar aparelho</h3>
</header>

<div class="content">
  <form id="form-aparelho" 
        method="post" 
        autocomplete="off"
        action="/aparelho/edt/<%= aparelho._id %>">

    <div class="grid">

      <div>
        <label for="id">ID</label>
        <input id="id" name="id" type="text" value="<%= aparelho._id %>" readonly required>
      </div>

      <div>
        <label for="nome">Nome do Aparelho</label>
        <input id="nome" 
               name="nome" 
               type="text" 
               placeholder="Ex: Voador"
               value="<%= aparelho.nome %>" 
               required>
      </div>

      <div>
        <label for="marca">Marca</label>
        <input id="marca" 
               name="marca" 
               type="text" 
               placeholder="Ex: Life Fitness"
               value="<%= aparelho.marca %>" 
               required>
      </div>

      <div>
        <label for="tipo">Tipo</label>
        <input id="tipo" 
               name="tipo" 
               type="text" 
               placeholder="Ex: Costas"
               value="<%= aparelho.tipo %>" 
               required>
      </div>

      <div>
        <label for="preco">Preço</label>
        <input id="preco" 
               name="preco" 
               type="number" 
               placeholder="Ex: 110,00"
               value="<%= aparelho.preco %>" 
               required>
      </div>

      <div>
        <label for="estado">Estado do aparelho</label>
        <input id="estado" 
               name="estado" 
               type="text" 
               placeholder="Ex: Novo"
               value="<%= aparelho.estado %>" 
               required>
      </div>

    </div>

    <div class="field-help">Os campos com * são obrigatórios.</div>

    <footer>
      <a type="button" class="btn ghost" href="/aparelho/lst">Cancelar</a>
      <button type="submit" class="btn primary">Salvar</button>
    </footer>

  </form>
</div>

<%- include('../rodape.ejs') %>
