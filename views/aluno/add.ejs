   <%-include('../cabecalho.ejs')%>
     <header>
        <div class="title2">Novo Aluno</div>
        <div class="subtitle">Registre um novo aluno</div><br>
      </header>
      <div class="content">
        <form id="form-aluno" autocomplete="off" action="/aluno/add/ok" method="post">
          <div class="grid">
            <div>
              <label for="aluno">Nome do Aluno</label>
              <input id="nome" name="nome" type="text" placeholder="Ex: Pedro Ignacio" required>
            </div>
            <div>
              <label for="cpf">CPF</label>
              <input id="cpf" name="cpf" type="text" placeholder="Ex: 95561501020" required>
            </div>
            <div>
              <label for="telefone">Telefone</label>
              <input id="telefone" name="telefone" type="text" placeholder="Ex: 53 999350535" required>
            </div>
            <div>
              <label for="plano">Plano</label>
              <input id="plano" name="plano" type="text" placeholder="Ex: mensal" required>
            </div>
            <div>
              <label for="dataNascimento">Data de nascimento</label>
              <input id="dataNascimento" name="dataNascimento" type="date" class="input" value="2025-09-05" required style="font-family: inherit; font-size: 1rem;">
            </div>
            
          <footer>
            <a type="button" class="btn ghost" id="btn-cancelar" href="/aluno/lst">Cancelar</a>
            <button type="submit" class="btn primary">Criar aluno</button>
          </footer>
        </form>
      </div>

      <%-include('../rodape.ejs')%>