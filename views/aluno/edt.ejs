<%- include('../cabecalho.ejs') %>

<header>
  <h3>Editar Aluno</h3>
</header>

<div class="content">
  <form id="form-aluno" 
        method="post" 
        autocomplete="off"
        action="/aluno/edt/<%= aluno._id %>">

    <div class="grid">

      <div>
        <label for="id">ID</label>
        <input id="id" 
               name="id" 
               type="text" 
               value="<%= aluno._id %>" 
               readonly required>
      </div>

      <div>
        <label for="nome">Nome do Aluno</label>
        <input id="nome" 
               name="nome" 
               type="text" 
               placeholder="Ex: João Silva" 
               value="<%= aluno.nome %>" 
               required>
      </div>

      <div>
        <label for="cpf">CPF do aluno</label>
        <input id="cpf" 
               name="cpf" 
               type="text" 
               placeholder="Ex: 123.456.789-00" 
               value="<%= aluno.cpf %>"
               required>
      </div>

      <div>
        <label for="telefone">Telefone do Aluno</label>
        <input id="telefone" 
               name="telefone" 
               type="text" 
               placeholder="Ex: (11) 91234-5678"
               value="<%= aluno.telefone %>"
               required>
      </div>

      <div>
        <label for="plano">Plano do aluno</label>
        <input id="plano" 
               name="plano" 
               type="text" 
               placeholder="Ex: mensal"
               value="<%= aluno.plano %>"
               required>
      </div>

      <div>
        <label for="dataNascimento">Data de nascimento do aluno</label>
        <input id="dataNascimento" 
               name="dataNascimento" 
               type="date"
               value="<%= aluno.dataNascimento ? aluno.dataNascimento.toISOString().split('T')[0] : '' %>" 
               required>
      </div>

    </div>

    <div class="field-help">Os campos com * são obrigatórios.</div>

    <footer>
      <a type="button" class="btn ghost" href="/aluno/lst">Cancelar</a>
      <button type="submit" class="btn primary">Salvar</button>
    </footer>

  </form>
</div>

<%- include('../rodape.ejs') %>
